
# These are set by the puppet base class when the puppet agent is running
[agent]
  environment   = <%= scope.lookupvar('::puppet::environment') %>
  <%- if @report or @report_server -%>
  report        = true
    <%- if @report_server -%>
  report_server = <%= @report_server %>
      <%- if @report_port -%>
  report_port   = <%= @report_port %>
      <%- end -%>
    <%- end -%>
  <%- end -%>
  <%- if @pluginsync -%>
  pluginsync    = true
  <%- end -%>
  <%- if @showdiff -%>
  showdiff      = true
  <%- end -%>